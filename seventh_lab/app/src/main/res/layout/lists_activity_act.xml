<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/pastel_green"
    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="16dp"
        android:background="@color/blue"
        >
        <ListView
            android:id="@+id/first_list_view"
            android:layout_margin="18dp"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            />
        <ListView
            android:id="@+id/second_list_view"
            android:layout_margin="18dp"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            />
    </LinearLayout>

    <EditText
        android:id="@+id/edit_text"
        android:text="@string/edit_text"
        android:layout_width="match_parent"
        android:layout_height="127dp"
        android:background="@color/blue"
        android:textAlignment="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="16dp"
        >
    <Button
        android:id="@+id/add_first_list"
        android:layout_width="180dp"
        android:layout_height="72dp"
        android:text="@string/add_to_first_list"
        android:onClick="onFirstListAddButton"
        android:background="@color/bloody"
        />
    <Button
        android:id="@+id/add_second_list"
        android:layout_width="180dp"
        android:layout_height="72dp"
        android:text="@string/add_to_second_list"
        android:onClick="onSecondListAddButton"
        android:background="@color/bloody"
        />
    </LinearLayout>
<Button
    android:id="@+id/backButton"
    android:layout_width="match_parent"
    android:layout_height="128dp"
    android:text="@string/back"
    android:background="@color/pink"
    android:layout_margin="24dp"
    android:onClick="onBackButton"
    />
</LinearLayout>